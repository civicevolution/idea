- my_rating = question.idea_ratings.detect{|r| r.member_id == @member.id}
:plain
	$('div.question_tabs[id="#{question.id}"]').slideUp(200,function(){
		$(this).remove();
	})
	
	var question_view = $("#{escape_javascript(render( :template=> 'ideas/question_view', :locals=>{my_rating: my_rating, question: question}, formats: [:html]  ))}");
		
	init_question_tabs(question_view, '#{ params[:page] || 'question'}', #{params[:idea_id] || 'null'});
	
	
	
	
	