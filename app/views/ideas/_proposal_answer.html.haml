%li.theme{id: theme.id}	
	%div.answer
		:markdown
			#{theme.text}
			
		- if !theme.attachments.empty?
			%div.attachments
				- theme.attachments.each do |att|
					- icon_url = att.attachment_content_type.match(/image/i) ? att.attachment(:icon) : '/assets/doc_icon.gif'
					%div.attachment
						= link_to "#{att.attachment.url.to_s}", target: '_blank' do
							=image_tag(icon_url, title: att.attachment_file_name)
							%p= att.attachment_file_name
				%p.clear
		
	%div.answer_status	
		- if @project_coordinator
			= image_tag 'blue-pencil-24.png', :class=>"edit"
		%div.comments
			= image_tag('comment-sketch.gif', title: 'Number of comments')
			%div.counts
				%div.new
					0 new
				%div.total
					0 total
		%p Click to rate and discuss
