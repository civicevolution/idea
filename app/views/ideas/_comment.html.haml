%div.comment{id:comment.id}
	%div.img
		%img{src: comment.author.photo.url(:small), class: 'i36'}		
		%p.new_com.hide New
		
	%div.comment_body
		%div.com_text!= comment_with_author(comment)
		- if !comment.attachments.empty?
			%div.attachments
				- comment.attachments.each do |att|
					%div.attachment
						= link_to "#{att.attachment.url.to_s}", target: '_blank' do
							=image_tag(att.icon_url, title: att.attachment_file_name)
							%p= att.attachment_file_name
				%p.clear
		
		
		%p.timeago
			#{time_ago_in_words(comment.updated_at)} ago