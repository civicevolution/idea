= error_messages_for 'question'
- form_for :question, :url => { :action => :create_question } do |form| 
	%p= form.error_messages
	%fieldset
		- if @mode == 'add'
			%legend& 
				%b Please add your Question for this team
			%h3&= @target.chat_title
		- else
			%legend& 
				%b Please edit your Question for this proposal

		%p= form.label :text, "Your Question:"
		%p= form.text_area :text, :cols => 60, :rows => 8
		= hidden_field_tag :par_id, @target_item.id
		= hidden_field_tag :id, @target_item.o_id
		= hidden_field_tag :mode, params[:mode]
		= submit_tag
		= link_to 'Cancel', :action => 'index'