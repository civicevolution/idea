%div#immediate_report
	%p.date On #{TZInfo::Timezone.get(@recip.location.gsub(' ','_')).utc_to_local( @entry.updated_at).strftime('%A %B %d, %Y at %I:%M %p')},
	
	- if @entry.class.to_s == "Comment"
		%p.report #{@entry.author.first_name} #{@entry.author.last_name} updated this proposal you are following:
	- else
		%p.report Someone updated this proposal you are following:
		
	%h3 
		= link_to @team.title, plan_url(:host=>@host,:id=>@team.id,:_mlc => @mcode)

	%div.new_content
		- case
			- when @entry.class.to_s == "Answer" && @report[:report_format] == 1
				- if @entry.ver == 1
					%p.entry_title This new answer was added
				- else
					%p.entry_title An answer was edited
		
				%div.ans!= "<p>#{@entry.text.gsub(/\n/,'<br/>')}</p>"

			- when @entry.class.to_s == "Comment" && @report[:report_format] == 1
				%p.entry_title This comment was added
				%div.Comment
					!= "<p>#{@entry.text.gsub(/\n/,'<br/>')}</p>"
					%p.view= link_to 'View this comment', question_worksheet_url(:host=>@host, :question_id=>@entry.question.id, :t=>'c', :id=> @entry.id, :_mlc => @mcode)

			- when @entry.class.to_s == "TalkingPoint" && @report[:report_format] == 1
				%p.entry_title This talking point was added
				%div.TalkingPoint
					!= "<p>#{@entry.text.gsub(/\n/,'<br/>')}</p>".html_safe
					%p.view= link_to 'View this talking point', question_worksheet_url(:host=>@host, :question_id=>@entry.question_id, :t=>'tp', :id=> @entry.id, :_mlc => @mcode)
	
			- when @entry.class.to_s == "Answer"
				An answer was added or edited

			- when @entry.class.to_s == "Comment"
				A comment was added

			- when @entry.class.to_s == "BsIdea"
				A brainstorming idea was added
				
	-#%p.source
		(Generated by the CivicEvolution facilitator based on the discussion, brainstorming ideas and answers your team has previously submitted.)
	
	%ul
		%li We have just finished a major redesign of CivicEvolution
		%li 
			Please 
			= link_to 'view the video', home_url(:host=>@host,:video=>'play', :_mlc => @mcode) 
			to see how the new design works
		%li Please help us by reporting any bugs, problems, or suggestions
		%li Click "Help and feedback" on the right side of each page
		%li You can also email us at support@civicevolution.org
		
				
	%hr
	%p.unsubscribe
		You can 
		=link_to 'adjust your notification settings',  notification_settings_form_url(:host=>@host, :team_id => @team.id, :_mlc => @mcode)
		or 
		=link_to 'completely unsubscribe',  unsubscribe_url(:host=>@host, :_mlc => @mcode)
%style
	:sass
		body
			width: 500px
		h3
			margin-left: 20px
		p.entry_title
			font-style: italic
		p.report
			margin-top: 0
			font-size: 1.2em
		p.source
			margin-left: 2em
		.ans
			font-size: 1.2em
			color: blue
		div.new_content
			margin: 0 0 4em 2em
		p.view
			margin: 0 0 0 0
			font-size: .9em
		div.Comment
			background-color: rgb(245,230,190)
			padding: 1em
			-webkit-border-radius: 10px
			-moz-border-radius: 10px
			border-radius: 10px
		div.TalkingPoint
			background-color: #BCC3D0
			padding: 1em
			-webkit-border-radius: 10px
			-moz-border-radius: 10px
			border-radius: 10px
		div.ans
			margin-left: 20px
		p.com_date
			margin: 0
			font-size: .88em
			font-style: italic
		p.unsubscribe
			font-size: .8em
			