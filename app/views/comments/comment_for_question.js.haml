= render :template => 'shared/clear_sign_in_form.js'
:plain
	var com = $("#{escape_javascript(render(  :partial=> 'plan/comment', :locals=>{:comment=>comment, :members => members}, :content_type => 'html'  ))}");
	$('div.question_worksheet[id="#{question_id}"] div.ques_discussion div.Comment:last').after(com);
	$('div.question_worksheet[id="#{question_id}"] form.what_do_you_think textarea').val('');
	$('div.question_worksheet[id="#{question_id}"] form.what_do_you_think p.warn').remove();
	$('div.question_worksheet[id="#{question_id}"] form.what_do_you_think input[type="radio"]').attr('checked',false)
= render :template => 'shared/clear_sign_in_form.js'