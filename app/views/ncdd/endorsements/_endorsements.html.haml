%div.endorsements
	%h2.section_hdr Our supporters
		
	
	- if @endorsements.size == 0
		%h4.sub_sec_hdr No one has endorsed this proposal yet.
	- else
		%h4.sub_sec_hdr This proposal is endorsed by #{pluralize(@endorsements.size, 'person')}

	- if !print
		%p If you like this proposal, please add a statement of support in the box below and click the button. You can endorse your own proposal and invite your friends to endorse it as well!
	%div.endorsements_inner

		%table.endorsements{:class => @endorsements.size == 0 ? 'hide' : ''}
			%tr
				%th{:colspan=> !print ? 2 : 1} Name
				%th Comment
				%th When
			- endorsed = false	
			- @endorsements.each do |e|
				%tr{:class=> cycle('','stripe'), :id=>e.member.ape_code}
					- if !print
						%td.pic
							- if !e.id.nil?
								%img{:src=> e.member.photo.url(:small)} 
					%td.name
						%span.member& #{e.member.first_name} #{e.member.last_name}
					%td.text= simple_format( e.text )
					%td.time
						%abbr.timeago{:title=>e.updated_at}= time_ago_in_words(e.updated_at) + ' ago'
					- if e.member.id == @member.id && !print
						- endorsed = true
						%td.delete
							-#= form_tag edit_plan_endorsement_path(@team.id) do
							-#	= submit_tag "Edit", :class => 'link'
							= form_tag delete_plan_endorsement_path(@team.id) do
								= submit_tag "Delete", :class => 'link'
			
		- if !print			
					
			= form_tag add_plan_endorsement_path(@team.id), :class=>'std_form endorsement' + ( endorsed ? ' hide' : '' ) do 
				%div.add_answer
					%p
					= label_tag :text, "My statement in support of this proposal"
					= text_area_tag :text, '', :class=>'answer autosize', :size=>"1x2"
					%div.form_controls
						= submit_tag "I endorse this proposal", :name=>'endorse', 'data-disable-with'=>'Submitting...'

						%span.char_ctr 500 characters
						= link_to 'Clear', '#', {:class=>'clear', :rel=>'nofollow'}
					
					-#%div.control_line
						%div.controls
							= submit_tag "I endorse this proposal", :name=>'endorse', 'data-disable-with'=>'Submitting...'
							%span.char_ctr 500 characters
							= link_to 'Clear', '#', {:class=>'clear', :rel=>'nofollow'}
				%p.clear
	%p.clear

