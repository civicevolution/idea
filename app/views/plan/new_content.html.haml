%div.new_content
	%h3= @team.title
	- if @member.id == 0
		%h3 This is new content since #{@last_visit.strftime('%A %b %d, %Y')}
		%p If you sign in we can show you only the new content since your last visit
	- else
		%h3 Here is the new content since your last visit on #{@last_visit.strftime('%A %b %d, %Y')}

	%p
		(#{pluralize( @talking_points.select{|tp| tp['new']}.size, 'new talking point')},
		#{pluralize( @comments.size, 'new comment')})
	

	%table{:cellspacing=> 0}
		%tbody
			- @team.questions.sort! {|a,b| a.order_id <=> b.order_id }
			= render :partial=> 'question_new_content', :collection => @team.questions, :as => :question
			
			
	%style
		:sass
			div.new_content
				$talking_point_bg: #BCC3D0 //rgb(192,228,154)
				div.talking_point_comment
					margin-left: 20px
				div.talking_point
					//margin-left: 20px
					span.talking_point_text
						font-size: 1.2em
					p.talking_point.new
						font-weight: bold
				div.question, div.question_content
					margin-left: 20px
				abbr.timeago, span.author, span.tp_reference
					font-size: .8em
					color: #888
					white-space: nowrap
				abbr.timeago
					margin-left: 10px
				span.author
					margin-right: 10px
				span.com_quote
					font-style: italic
				table
					width: 800px
					margin: 1em
					td
						border-bottom: 2px solid white
					tr.question
						background-color: #F2E9C3
						font-size: 1.4em
						td
							border-bottom: 4px solid white
							border-top: 4px solid white
					tr.talking_point
						//background-color: $talking_point_bg
						background: $talking_point_bg
						font-size: 1.2em
						td.talking_point_entry
							background: url(/images/white_bulb_sm.gif) no-repeat 8px 20px
						a.display_talking_point
							display: block
							float: left
							margin: 1em 0
							padding-left: 30px
							width: 390px
						div.talking_point_acceptable
							width: auto
							background: none
							margin: 1em 0 0 0 
							padding: 0
						div.talking_point_preferable
							width: auto
							background: none
							margin: 1em 0 0 0 
							padding: 0
							
					tr.comment.stripe
						background-color: #F9F3DE
					td
						vertical-align: top
						padding-bottom: 1em
						padding-top: 4px
					td.level1
						padding-left: 20px
					td.level2
						padding-left: 40px
				p.talking_point 
					margin-bottom: 1em
					padding-left: 30px
				td
					a
						text-decoration: none
						color: black
					a:hover
						//text-decoration: underline
						font-weight: bold
					a:visited
						color: #444
