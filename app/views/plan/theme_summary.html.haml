- logger.debug "\n\n*************** Begin to render the plan theme_summary page\n\n"
%div.page_content_div
	%div.left_side
		= render :partial=> 'proposal_header'	
		%hr.top
		
		%div
			%div.intro
				%h1.home_title
					%span= @team.title
				- if @member.id == @team.org_id
					= link_to "edit", team_edit_path(@team.id, target: 'title'), class: "edit_title edit", remote: true

				%h2.label.section_hdr Our Vision
				%div.summary_block
					%div.summary.text
						%div.idea_summary
							%div.inner
								:markdown
									#{@team.solution_statement}
							
							- if @member.id == @team.org_id
								= link_to "edit", team_edit_path(@team.id, target: 'summary'), class: "edit_summary edit", remote: true
								
						- if @team.id == 10096	
							= render partial: 'embedded_video'
							
						= render( partial: 'ideas/rating', locals: { idea: @team.idea } )

						%h4.sub_sec_hdr.discussion{idea_id: @team.idea.id}
							= link_to view_idea_details_path(@team.idea.id), {class: 'view_all_ideas', rel: 'nofollow', remote: true, wait: 'gif', title: 'Click to view the discussion for this proposal', orig_text: "What comments or questions do you have?" } do
								%span What comments or questions do you have?
								%div.comments
									= image_tag('comment-sketch.gif', title: 'Number of comments')
									%div.counts
										%div.new
											0 new
										%div.total
											0 total
							%p.clear_both
						%div.discussion
					

						%p.clear_both

					%p.clear_both
				%p.clear_both
			%p.clear_both
			
			%div.segue
				%h2.label.section_hdr Our Plan
				%p 
					Let's build a coherent and convincing plan to implement this vision by thinking together to answer these four questions.
					Our project coordinator, #{@team.organizer.first_name}, will continuously weave together our ideas and comments to compose and refine the answers.
					

			- questions = @team.question_ideas.sort {|a,b| a.order_id <=> b.order_id }
			%div.proposal
				= render :partial=> 'question_theme_summary', :collection => questions, :as => :question, :locals => { questions: questions, team: @team}

		= render :partial => 'endorsements/endorsements', :locals=> {:print=>false}
		
		- if [1,2].include?( params[:_initiative_id] )
			= render :partial => 'submit'
		
		%hr.bottom	
		= render :partial=> 'proposal_footer'	
			
	%div.right_side
		= render :partial => 'right_panel/master'

%p.clear_both
:javascript
	var pub_sub_channels = #{@channels}
	var theming_auth = #{@team.org_id == @member.id}
	if(typeof stat_data == 'undefined'){
		var stat_data = {
			last_visit: #{@last_visit.to_f},
			coms: #{@com_data.to_json},
			ideas: #{@idea_data.to_json},
			ratings: #{@rating_data.to_json}
		}
	}

