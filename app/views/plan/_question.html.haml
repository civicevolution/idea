%div.worksheet.page_content_div
	%div.spiral
	%div.question_worksheet.notebook{:id=>question.id, :ans_criteria=>question.answer_criteria, :talking_point_criteria=>question.talking_point_criteria}
	
		= render :partial => 'plan/question_navigation', :locals=>{:question=>question, :questions=>questions, :counter => question_counter}

		%h2.question{:id=>question.id} Q#{question.order_id}: #{question.text}
		%div.talking_point_sec
			%h3.ques_sub_hdg Talking points suggested and rated by your community
			%div.talking_points_list
	
	
				%div.talking_point_entry.header
					%div.talking_point_body
						%div.instr
							= image_tag('red_arrow.gif', :class=>'red_arrow')		
							%p.instr
								The goal is to reach agreement on the most preferred talking points that are acceptable to most of your community. 
								= link_to "Learn more"

					%div.talking_point_acceptable
						%p.title Acceptable

					%div.talking_point_preferable
						%p.title Preferable
		
					%p.clear_both
				

				= render :partial=> 'plan/talking_point', :collection => question['talking_points_to_display']
				
				%p.clear_both
				%p.show_more_link
					- if question.num_new_talking_points > 0
						= link_to "Show #{ pluralize(question.num_new_talking_points, 'new talking point')}", {}, { :class=> 'question_show_talking_points', :id=>question.id }
					- if question.num_talking_points > question['talking_points_to_display'].length
						= link_to "Show #{ pluralize(question.num_talking_points - question['talking_points_to_display'].length, 'more talking point')}", {}, { :class=> 'question_show_talking_points', :id=>question.id }
					- if question.num_talking_points == 0
						There are no talking points for this question, please add one with the form below.
				

		= link_to "Tell us what you think and learn more", {}, {:class=> 'open_worksheet'}
		= render :partial => 'plan/what_do_you_think', :locals => {:question_id=>question.id}


		%div.ques_discussion.discussion
			%h3.ques_sub_hdg Comments posted by your community

			- if question['comments_to_display'].size > 0
				= render :partial=> 'plan/comment', :collection => question['comments_to_display'].sort{|a,b| a.id<=>b.id}
			- else
				%div.Comment.hide
				
			%p.clear_both

			%p.show_more_link
				- if question.new_coms > 0
					= link_to "Show #{ pluralize(question.new_coms, 'new comment')}", {}, { :class=> 'question_show_comments', :id=>question.id }
				- if question.coms > question['comments_to_display'].length
					= link_to "Show #{ pluralize(question.coms - question['comments_to_display'].length, 'more comment')}", {}, { :class=> 'question_show_comments', :id=>question.id }
				- if question.coms == 0
					Question has no comments

		= render :partial => 'plan/question_navigation', :locals=>{:question=>question, :questions=>questions, :counter => question_counter}
