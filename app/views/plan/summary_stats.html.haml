%div.cta_block.corner
	%div.num 1
	%div.text
		%h3.tagline Think together to act together
		%p We're creating a community written and supported plan to put this idea into action.
	%p.clear_both
	
%div.cta_block.corner
	%div.num 2
	%div.text
		%h3 How it works
		%p 
			-#We discuss each question on the left to find acceptable, common ground based answers. Click a question to see more detail and participate or click here to
			We discuss each question on the left to find answers acceptable to most of the community. 
		%p	
			Click a question to participate. 
			= link_to "Learn more", help_develop_path, {:remote=>true}
	%p.clear_both
	
%div.cta_block.corner
	%div.num 3
	%div.text
		%h3 Be part of the solution!
		-#%p.cta
			= link_to "Tell us what you think"
		%p.cta
			= link_to "Help develop a proposal", help_develop_path, {:remote=>true}

		%p.cta
			= link_to "Endorse a proposal", help_endorse_path, {:remote=>true}
		
			
		%p.cta
			= link_to "Follow this idea", notification_settings_form_path(@team.id), {:remote=>true}
		
		%p.cta
			= link_to "Invite friends", invite_friends_form_path(@team.id), {:class=>'invite', :remote=>true}
			
		%div.tools	
			/AddThis Button BEGIN
			%div.addthis_toolbox.addthis_default_style
				%a.addthis_button_compact{:href=>"http://addthis.com/bookmark.php?v=250"}Share
				%span.addthis_separator
				%a.addthis_button_facebook
				%a.addthis_button_twitter
				%a.addthis_button_googlebuzz
				%a.addthis_button_email
				%span.addthis_separator
				%a.addthis_button_facebook_like
			-#= javascript_tag %Q|var addthis_config = {"data_track_clickback":true};|
			-#= javascript_include_tag 'http://s7.addthis.com/js/250/addthis_widget.js#username=civicevolution'
			/AddThis Button END
		
		%p.cta
			= link_to 'Please watch our intro video', {},:rel=>'prettyPhoto', :href=>'http://vimeo.com/29348381', :title=>'2029 CivicEvolution Intro'

		
	%p.clear_both					
					
%div.progress.corner
	%div.leaderboard	
		%h3 Top participants
		%table
			%tbody
				- @team.participants.sort{|a,b| b[:points]<=>a[:points]}.each do |participant|
					%tr
						%td
							%img{:src=>participant.photo.url('36'),:class=>'i36'}	
						%td	
							%b= participant.first_name
							%br
								#{participant[:points]} points
							
	%div.participants
		%h3 All participants
	
		-#%p These community members are already involved in creating this proposal

		- @team.participants.each do |participant|
			%img{:src=>participant.photo.url('36'),:class=>'i36'}

		%h3 They've made great progress
		%table
			%tbody
				%tr.stripe
					%td= pluralize( @team.participants.size, 'participant')
				-# @team.stats.find_all{|s| s[:order] && s[:order].to_i != 0}.sort{|a,b| a[:order].to_i<=>b[:order].to_i}.each do |stat|
					%tr{:class=>cycle('','stripe')}
						%td
							= pluralize(stat[:count], stat[:title]) 
							-#(#{stat[:points]} points)
				- if @team.stats
					-	PARTICIPATION_EVENT_POINTS.values.find_all{|pep| pep['summary_order'] && pep['summary_order'].to_i != 0}.sort{|a,b| a['summary_order'].to_i<=>b['summary_order'].to_i}.each do |stat|
						- logger.debug "stat: #{stat.inspect}"
						%tr{:class=>cycle('','stripe')}
							%td
								= pluralize(@team.stats[stat['col_name']], stat['summary_title']) 					
	
	%p.clear_both	

%div.tools_info.corner
	-#%p= link_to "Email participants",{},{:class=>'email_participants'}
	-#%p= link_to "Print proposal",{},{:class=>'invite'}

	%div.videos	
		%p= link_to 'Watch our Introduction to CivicEvolution', {},:rel=>'prettyPhoto', :href=>'http://vimeo.com/29348381', :title=>'2029 CivicEvolution Intro'
		%a{:rel=>'prettyPhoto', :href=>'http://vimeo.com/29348381', :title=>'2029 CivicEvolution Intro', :id=>'play_intro_video'} 
			= image_tag 'vhelp/ce_tp_video_placeholder.jpg', :alt=>'2029 CivicEvolution Demo Video', :title=> 'Click to play this video'
		%p= link_to "Visit our help page", visual_help_path, {:remote=>true}

