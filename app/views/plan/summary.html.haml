- logger.debug "\n\n*************** Begin to render the plan page\n\n"
%div.page_content_div
	%div.talking_points_page
		%div.left_side
			%div.spiral
			%div.notebook.corner
				%div.intro
					%div.suggest_title
						%img{:src=>@team.organizer.photo.url('36'),:class=>'i36'}
						%h3 #{@team.organizer.first_name} #{@team.organizer.last_name} suggested this idea for change:
					%h2.home_title 
						%span #{@team.title}
						- if @member.id == @team.org_id
							= link_to "edit", edit_plan_summary_path(@team), {:class => "edit_summary"}

					%div.summary
						- if @member.id == @team.org_id
							= simple_format( h @team.solution_statement ).sub(/<\/p>$/, ' ' + (link_to "edit", edit_plan_summary_path(@team), {:class => "edit_summary"} ) + '</p>')
						- else
							= simple_format h @team.solution_statement


					%div.resources
						%div= image_tag('misc/images-1.jpeg')
						%div= image_tag('misc/images-2.jpeg')
						%div= image_tag('misc/images-3.jpeg')
						%div= image_tag('misc/images-4.jpeg')
						%div= image_tag('misc/images-5.jpeg')
						%div= image_tag('misc/images-6.jpeg')
						%div= image_tag('misc/images-7.jpeg')
						%div= image_tag('misc/images-8.jpeg')
					%p.clear_both
		

				- questions = @team.questions.sort {|a,b| a.order_id <=> b.order_id }
				%div.proposal
					%h3 Current proposal details
					= render :partial=> 'question_summary', :collection => questions, :as => :question, :locals => {:questions => questions}
	
				= render :partial => 'submit'

		%div.right_side
			= render :template => 'plan/summary_stats'

	%p.clear_both
	= render :partial => 'endorsements/endorsements', :locals=> {:print=>false}