- logger.debug "\n\n*************** Begin to render the plan page\n\n"
%div.idea_page
	- org = @team['org_member']
	%div.suggest_title
		%img{:src=>org.photo.url('36'),:class=>'i36'}
		%h3 #{org.first_name} #{org.last_name} suggested this idea for change in the community:
	%h2.home_title 
		%span #{@team.title}
		- if @member.id == @team.org_id
			= link_to "edit", {:action => "edit_proposal_idea", :id => @team.id}, {:class => "edit_in_place [{form_tgt_selector: '.closest(\\'h2\\')', selector: '.parent().find(\\'span\\')', chr_cnt: 255, label: 'Please edit the title', url: '/idea/inline_edit?model=team&field=title&id=#{@team_id}' }]"}

	%div.summary
		- if @member.id == @team.org_id
			= simple_format( h @team.solution_statement ).sub(/<\/p>$/, ' ' + (link_to "edit", {:action => "edit_proposal_idea", :id => @team.id}, {:class => "edit_in_place [{selector: '.closest(\\\\'div.summary\\\\')', chr_cnt: 1000, label: 'Please edit the summary', url: '/team/inline_edit?model=team&field=solution_statement&id=#{@team_id}' }]"} ) + '</p>')
		- else
			= simple_format h @team.solution_statement



- idx = 0
- @team.questions.sort {|a,b| a.order_id <=> b.order_id }.each do |question|
	- logger.debug "\n\n*************** Begin to render a question\n\n"
	
	%div.question_page
		%h2.question Q#{idx += 1}: #{question.text}
		%div.talking_point_sec
			%h3.ques_sub_hdg Talking points suggested and rated by your community
			%div.talking_points_list
				%p.instr
					The goal is to reach agreement on the most preferred talking points that are acceptable to most of your community. 
					= link_to "Learn more"
			
				%p 
					Question has 
					- if question.num_new_talking_points > 0
						#{question.num_new_talking_points} new talking points
					- elsif question.num_talking_points > 0
						#{question.num_talking_points} talking points
					- else
						no talking points
						
				= render :partial=> 'talking_point', :collection => question.top_talking_points


		%div.what_you_think
			%h3.ques_sub_hdg What do you think?

		
		%div.ques_discussion
			%h3.ques_sub_hdg Comments posted by your community
		
			%p
				Question has 
				- if question.new_coms > 0
					#{question.new_coms} new comments
				- elsif question.coms > 0
					#{question.coms} comments
				- else
					no comments
					
			= render :partial=> 'comment', :collection => question.recent_comments

		