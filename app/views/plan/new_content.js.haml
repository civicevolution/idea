:plain
	console.log("show new content form")
	var new_content = $("#{escape_javascript(
		render( :template => 'plan/new_content.html' )
	)}");

	var dialog = new_content.dialog( {title : 'New content since your last visit', modal : false, width : 'auto', closeOnEscape: true });

	$('a.request_new').live('click',
		function(){
			var help_dlg = $('div.new_content').closest('div.ui-dialog');
			if(help_dlg.is(":visible")){
				help_dlg.hide();
			}else{
				help_dlg.show();
			}
		}
	);
