%div#coordinator
	:javascript
		var pub_sub_channels = #{@channels}
		function update_status_report(){}
	%style
		:sass
			div#coordinator
				td, th 
					padding-top: 1em
					padding-right: 2em
					text-align: left
					vertical-align: top
				input.link
					border: none
					background: none
					cursor: po inter
					margin: 0 
					padding: 0
					text-decoration: underline
				td.data
					p
						margin: 0
					p.lbl
						font-weight: bold
				div.test_mode
					border: 2px solid red
					margin: 1em
					padding: 1em
					width: 600px



	- if @event.test_mode
		%div.test_mode
			%h1.warn Warning!! This event is still in test mode
			%h2.warn You should exit test mode before the event commences

			%p= link_to 'Exit test mode', exit_event_test_mode_path(@event.id), method: :post, remote: true, confirm: 'Are you sure you want to exit event test mode? Data cannot be cleared once you exit test mode.'
			%h3 While in test mode you can clear the test data for this event
			%p= link_to 'Clear event test data', clear_event_test_data_path(@event.id), method: :post, remote: true, confirm: 'Are you sure you want to clear the event data? This cannot be undone!'


	%h3= @event.name
	%p= @event.description
	%h4 Event code: #{@event.event_code}
	
	-#%h3 Event sessions
	
	- @event_sessions.select{|es| es.session_type == 'group'}.sort{|a,b| a.order_id<=>b.order_id}.each do |group|
		%h3 
			Group #{group.name}
			= form_tag edit_live_session_path(:event_id => group.live_event_id, :id => group.id) do
				= submit_tag "Edit group #{group.id}", :class => 'link'
	
		%table
			%tr
				%th.nobreak Sess#
				%th Grp
				%th.nobreak Ord#
				%th.nobreak Start
				%th Min
				%th Session name and description
				%th Type/Data
			- @event_sessions.select{|s| s.group_id == group.id && s.session_type != 'group'}.sort{|a,b| a.order_id<=>b.order_id}.each do |session|
				%tr
					%td= session.id
					%td= session.group_id
					%td= session.order_id
					%td= session.starting_time.strftime("%H:%M") unless session.starting_time.nil?
					%td #{session.duration} min
					%td
						%b= session.name
						%br
						= session.description
					%td.data
						= session.session_type
						%p.lbl Inputs
						- if session.inputs.nil?
							%p 
								None defined	
						- else
							- session.inputs.each do |inp|
								%p "#{inp.tag}[#{inp.source_session_id}]"
						
						%p.lbl Outputs
						- if session.outputs.nil?
							%p 
								None defined	
						- else
							- session.outputs.each do |out|
								%p= "#{out.tag}[#{out.source_session_id}]"

					%td
						= form_tag edit_live_session_path(:event_id => session.live_event_id, :id => session.id) do
							= submit_tag "Edit", :class => 'link'
					%td		
						= form_tag delete_live_session_path(:event_id => session.live_event_id, :id => session.id) do
							= submit_tag "Delete", :class => 'link'
		%p= link_to "Add session", add_live_session_path

	%p= link_to "Add session", add_live_session_path
	
	%h3 Nodes
	%table
		%tr
			%th Node name and description
			%th Role
			%th Reports to
			%th Login as
		- @event_nodes.each do |node|
			%tr
				%td
					%b= node.name
					%br
					= node.description
				%td= node.role
					
				%td
					- par = @event_nodes.detect{ |en| en.id == node.parent_id }
					= par.nil? ? 'Not selected' : par.name

				%td #{node.username}/#{node.password}
				%td
					= form_tag edit_live_node_path(:event_id => node.live_event_id, :id => node.id) do
						= submit_tag "Edit", :class => 'link'
				%td		
					= form_tag delete_live_node_path(:event_id => node.live_event_id, :id => node.id) do
						= submit_tag "Delete", :class => 'link'

	%p= link_to "Add node", add_live_node_path
	
	%p Subscribe to #{@channels}

-#	%h3 All staff
	%table
		%tr
			%th First name
			%th Last name
			%th Username
			%th Password
			%th Roles
		- @event_staff.sort{|a,b| a.first_name<=>b.first_name && a.last_name<=>b.last_name}.each do |staff|
			%tr
				%td= staff.first_name
				%td= staff.last_name
				%td= staff.user_name
				%td= staff.password
				%td= staff.roles
				%td= link_to "edit"
				%td= link_to "delete"
	%p= link_to "Add staff"
		
				
