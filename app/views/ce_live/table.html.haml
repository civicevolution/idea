- content_for(:script) do
	%style
		:sass
			$navy_blue: #23238E
			$help_tag: #f3973a
			div.page
				div#left
					width: 400px
					float: left
					margin-right: 40px
				div#right
					width: 400px
					float: left

			p.table_vote
				font-weight: bold
				span
					margin-left: 16px
				input[type="text"]
					width: 40px

			div#live_talking_points, div#groups_live_talking_points
				div.inner
					overflow: auto
					overflow-y: scroll
					width: 460px
					height: 300px
					border: 1px solid black
					padding: 1em 0
				input[type=text]
					width: 360px
				p.text
					margin: 0
			
			div#groups_live_talking_points
				div.inner
					height: 300px
					div.live_talking_point
						background-color: #FBE574
						margin: 20px
						padding: 10px
						img
							display: none
						p.stats
							display: block
							font-size: .8em
							span.pos
								margin-left: 10px
								color: green
							span.neg
								color: red
			p.section_title
				font-weight: bold
				margin-bottom: 4px
			
			form.post_live_tp
				img
					display: inline
					float: right
				p.table_vote
					margin: 0
					button
						font-size: 1.2em
				ul.errors
					color: red
				div.form_controls
					text-align: left
					font-size: 12px
					height: 16px
					margin: -4px 0 8px 0
					span.char_ctr
						right: 0
						left: auto
			div.request_help
				float: right
				background-color: $help_tag
				color: $navy_blue
				width: 120px
				text-align: center
				font-weight: bold
				margin: 4px 10px 4px 0

				
						
	= javascript_include_tag 'app_ce_live_table.js'
	:javascript
		var pub_sub_channels = #{@channels}
		if(#{@session.published}){
			// disable the form inputs
			$('form.post_live_tp :input').attr('disabled','disabled')
			$('a.new_live_talking_point').remove();
		}

%div#table
	
	-#%div.request_help
		= link_to 'Request help'

	%hr
	
	%div#left
		%div.talking_point_block
			- if @session.published
				%h3.warn The themes from this session have been published and no themes can be added
		
			%p.section_title Enter a talking point
			- params[:ch] ||= 'theme1'
			= form_tag(post_live_tp_path, :remote=>true, :class=>'std_form orig post_live_tp', :id=>1) do
				= hidden_field_tag :s_id, @session.id
				= text_area_tag :text, nil, {:class=>'autosize'}
				%div.form_controls
					%span.char_ctr{:cnt=>250}
						250 characters
					= hidden_field_tag :form_id, 1
				
				%p.table_vote 
					Acceptable
					%span.for
						Yes:
						= text_field_tag :votes_for
					%span.against
						No:
						= text_field_tag :votes_against
				
					%button{'data-disable-with' =>'Submitting...'}
						Share
					
						
		= link_to 'Start a new talking point', nil, :class=>'new_live_talking_point'
		%p.new_live_talking_point.hide You must submit a talking point before starting a new one

		-#%p= link_to 'Use test mode',nil,:class=>'test_mode'
		-#%div.test_mode
			%h3 Test mode
			= form_tag( live_test_ids_path, {:remote=>true}) do
				%table
					%tr
						%td Live session id
						%td= text_field_tag :live_session_id,22
					%tr
						%td Group range
						%td= text_field_tag :group_range, '1..8'
					%tr
						%td Delay range
						%td= text_field_tag :delay_range, '1..5'
					%tr
						%td Channel
						%td= text_field_tag :theme_channel
				
				= submit_tag 'Start test', {:disable_with => 'Submittingâ€¦'}
				= link_to "Stop test", {}, {:class=>'stop_test'}
				%h3.warn.hide Test in progress
	
		
	%div#right
	
		%p.section_title Talking points sent by your table
		%div#groups_live_talking_points
			%div.inner
				= render :partial => 'ce_live/live_talking_point.html', :locals =>{:mode => 'table_confirmation'}, :collection => @live_talking_points, :as => :live_talking_point
		
		-#%h3 Talking points as seen by themers
		-#%div#live_talking_points
			%div.inner

	%div.chat
		%p.hdr 
			Important message
			= link_to 'Close'
		%div.chat_log
		= form_tag do
			= hidden_field_tag :jug_id
			= text_field_tag :msg
			%input{type: 'button', value: 'Send'}
			
			