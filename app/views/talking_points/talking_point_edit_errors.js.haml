= render :template => 'shared/clear_sign_in_form', :formats => [:js]
:plain
	var errors = $("#{escape_javascript( render :partial => 'shared/error_messages', :locals => {:target => talking_point})}");
	var form = $('form.talking_point_edit_form[id="#{params[:talking_point_id]}"]');
	form.find('div#errorExplanation').remove();	
	form.find('textarea').before(errors);