%div#guideAccordion
	%h3#member
		- if !@member.nil? && !@member.id.nil? && @member.id != 0	
			= link_to "#{@member.first_name}'s profile & settings",{}
			= link_to "Sign out", {:controller => "sign_in", :action=> "sign_out"}, {:class=>'sign_out', :id => 'sign_out', :rel=>'nofollow'}
		- else
			%a{:href=>"#"} Sign in or Join now
	
	- if !@member.nil? && !@member.id.nil? && @member.id != 0	
		%div#member.tabs.content
			%ul
				%li
					%a{:href=>"#tab_member_profile"} Profile
				%li
					%a{:href=>"#tab_member_actions"} Actions
				%li
					%a{:href=>"#tab_member_settings"} Settings
			%div#tab_member_profile
				= render :partial=> 'accordion/profile'
			%div#tab_member_actions
				= render :partial=> 'accordion/actions'
			%div#tab_member_settings
				= render :partial=> 'accordion/settings'

	- else
		%div#member.tabs.content
			%ul
				%li
					%a{:href=>"#tab_member_sign_in"} Sign in
				%li
					%a{:href=>"#tab_member_join"} Join now
			%div#tab_member_sign_in
				= render :partial=> 'accordion/sign_in'
			%div#tab_member_join
				= render :partial=> 'accordion/join'

	%h3#curated_list.hide
		%a{:href=>"#"} Question talking points
	%div#curated_list.content.curated_list
		%div#list_tabs.tabs
			%ul#list_tabs
				%li
					%a.q_tab{:href=>"#tab_curated_q1"} Q1
					= link_to image_tag('close_icon_16.gif',{:title=>'Click to close worksheet', :class=>'close_worksheet'}), question_summary_path(0), :remote=>true, :class=>'close_worksheet'

	%h3#help
		%a{:href=>"#"} Help & contact us
	%div#help.tabs.content
		%ul
			%li
				%a{:href=>"#tab_help_introduction"} Introduction
			%li
				%a{:href=>"#tab_help_helpful_links"} Helpful links
			%li
				%a{:href=>'#tab_help_contact_us'} Contact us
			
		%div#tab_help_introduction
			= render :partial=> 'accordion/intro_help'
		%div#tab_help_helpful_links
			= render :partial=> 'accordion/helpful_links'
		%div#tab_help_contact_us
			= render :partial=> 'accordion/contact_us'
		
		
	%h3#progress
		%a{:href=>"#"} Participants & Progress
	%div#progress.tabs.content
		%ul
			%li
				%a{:href=>"#tab_part_progress"} Progress
			%li
				%a{:href=>"#tab_part_leaderboard"} Leaderboard
			%li
				%a{:href=>'#tab_part_participants'} Participants

		%div#tab_part_progress
			= render :partial=> 'accordion/progress'
		%div#tab_part_leaderboard
			= render :partial=> 'accordion/leaderboard'
		%div#tab_part_participants
			= render :partial=> 'accordion/participants'

	%h3#suggested_actions
		%a{:href=>"#"} Suggested actions
	%div#suggested_actions.tabs.content
		%ul
			%li
				%a{:href=>"#tab_suggest_you"} Just for you
			%li
				%a{:href=>"#tab_suggest_general"} General

		%div#tab_suggest_you
			%p Actions specifically for you right now
		%div#tab_suggest_general
			= render :partial=> 'accordion/suggested_actions'
		
	%h3#activity_chat
		%a{:href=>"#"} Activity & chat
	%div#activity_chat
		= render :partial=> 'accordion/chat_form'
		