%div.archived_comments
	%h4 
		Archived comments about this question
		= link_to image_tag('close_corner.gif',{:title=>'Click to close archived comments', :class=>'close_archived_comments'}), question_summary_path(@question.id), :remote=>false, :class=>'close_archived_comments'
	
	%div.comments
		= render( :partial=> 'plan/comment', :collection => @question['comments_to_display'], :locals => {:archived => true} )