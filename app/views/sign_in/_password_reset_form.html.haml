%style
	:sass
		div#reset_password
			div#errorExplanation
				margin-bottom: 1em

= render( :partial => 'shared/error_messages', :locals => {:errors => flash[:reset_pwd_errors]}) unless flash[:reset_pwd_errors].nil?

- return_page ||= ''
= form_tag(password_reset_post_path) do
	= hidden_field_tag :return_page, return_page
	= hidden_field_tag :code, params[:id]
	%table
		%tr
			%td
				%label{:for=>"password"} New password:
			%td
				= password_field_tag :password, params[:password_field_tag]
		%tr
			%td
				%label{:for=>"password2"} Repeat password:
			%td
				= password_field_tag :password_repeat, params[:password_field_tag2]

		%tr
			%td
				= submit_tag "Reset password"
			