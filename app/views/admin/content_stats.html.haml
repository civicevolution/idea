%style
	:sass
		td
			padding-left: 1em
		
= render :partial => 'admin_nav'
%h3 Content stats

%table
	%tr
		%th Day
		%th Comments
		%th Contributors
	- @com_stats.each do |cs|
		%tr
			%td= cs.cal_day
			%td= cs.cnt
			%td= cs.commentors
			
%h3 Talking point stats
%table
	%tr
		%th Day
		%th Talking points
		%th Contributors
	- @talking_point_stats.each do |cs|
		%tr
			%td= cs.cal_day
			%td= cs.cnt
			%td= cs.members


%h3 Answer stats
%table
	%tr
		%th Day
		%th Answers
		%th Contributors
	- @ans_stats.each do |cs|
		%tr
			%td= cs.cal_day
			%td= cs.cnt
			%td= cs.members

= render :partial => 'admin_nav'