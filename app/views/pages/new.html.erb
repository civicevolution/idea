<h1>New page</h1>

<% form_for(@page) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :page_title %><br />
    <%= f.text_field :page_title %>
  </p>
  <p>
    <%= f.label :html %><br />
    <%= f.text_area :html %>
  </p>
  <p>
    <%= f.label :chat_par_id %><br />
    <%= f.text_field :chat_par_id %>
  </p>
  <p>
    <%= f.label :chat_title %><br />
    <%= f.text_field :chat_title %>
  </p>
  <p>
    <%= f.label :discussion %><br />
    <%= f.check_box :discussion %>
  </p>
  <p>
    <%= f.label :classname %><br />
    <%= f.text_field :classname %>
  </p>
  <p>
    <%= f.label :css %><br />
    <%= f.text_field :css %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', pages_path %>