%style
	:sass
		input.link
			border: none
			background: none
			cursor: pointer
			margin: 0 
			padding: 0
			text-decoration: underline
		textarea
			height: 100px
		
%div.endorsements
	-#%div.spiral
	%div.notebook.corner
		- if @endorsements.size == 0
			%h3.desc No one has endorsed this proposal yet.
		- else
			%h3 Proposal is endorsed by #{pluralize(@endorsements.size, 'community member')}
	

		%table{:class => @endorsements.size == 0 ? 'hide' : ''}
			%tr
				%th{:colspan=>'2'} Name
				%th Comment
				%th When
			- endorsed = false	
			- @endorsements.each do |e|
				%tr{:class=> cycle('','stripe'), :id=>e.member.ape_code}
					%td.pic
						- if !e.id.nil?
							%img{:src=> e.member.photo.url('36')} 
					%td.name
						%span.member& #{e.member.first_name} #{e.member.last_name}
					%td.text= simple_format( e.text )
					%td.time
						%abbr.timeago{:title=>e.updated_at}= time_ago_in_words(e.updated_at) + ' ago'
					- if e.member.id == @member.id && !print
						- endorsed = true
						%td.delete
							= form_tag edit_plan_endorsement_path(@team.id) do
								= submit_tag "Edit", :class => 'link'
							= form_tag delete_plan_endorsement_path(@team.id) do
								= submit_tag "Delete", :class => 'link'
			
		- if !print			
			%div#add_tp.talking_point_form.hint.corner
				%div.form.cta
					%p 
						If you agree with this proposal, show your support by endorsing it. Add a statement of support in the form below and click the button.
				%div.instr
					%p 
						If you disagree, join the discussion to share your concerns and suggest improvements.
						= link_to "Here's how", help_develop_path, {:remote=>true}
				%p.clear_both
			
			= form_tag add_plan_endorsement_path(@team.id), :class=>'std_form' + ( endorsed ? ' hide' : '' ) do 
				%div.add_answer
					%p
					= label_tag :text, "My statement in support of this proposal"
					= text_area_tag :text, '', :class=>'answer autosize', :size=>"1x2"
					%div.form_controls
						= submit_tag "I endorse this proposal", :name=>'endorse', 'data-disable-with'=>'Submitting...'

						%span.char_ctr 500 characters
						= link_to 'Clear', '#', {:class=>'clear', :rel=>'nofollow'}
					
					-#%div.control_line
						%div.controls
							= submit_tag "I endorse this proposal", :name=>'endorse', 'data-disable-with'=>'Submitting...'
							%span.char_ctr 500 characters
							= link_to 'Clear', '#', {:class=>'clear', :rel=>'nofollow'}
				%p.clear
	%p.clear

