<h1>New member</h1>

<% form_for(@member) do |f| %>
  <%= f.error_messages %>


	<fieldset>
		<legends>Enter member details</legends>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :pic_id %><br />
    <%= f.text_field :pic_id %>
  </p>
  <p>
    <%= f.label :init_id %><br />
    <%= f.text_field :init_id %>
  </p>
  <p>
    <%= f.label :password, 'Password' %><br />
    <%= f.text_field :password, :size => 40  %>
  </p>
  <p>
    <%= f.label :password_confirmation, 'Confirm' %><br />
    <%= f.text_field :password, :size => 40  %>
  </p>
  <p>
    <%= f.label :confirmed %><br />
    <%= f.check_box :confirmed %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :access_code %><br />
    <%= f.text_field :access_code %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>

</fieldset>
<% end %>

<%= link_to 'Back', members_path %>